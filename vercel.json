{
  "version": 2,
  "builds": [
    { "src": "backend/server.js", "use": "@vercel/node" },
    { "src": "frontend/vite-project/package.json", "use": "@vercel/static-build", "config": { "distDir": "frontend/vite-project/dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server.js" },
    { "src": "/(.*)", "dest": "/frontend/vite-project/dist/$1" }
  ]
}
